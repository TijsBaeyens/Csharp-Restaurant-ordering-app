<Window x:Class="WpfApp.AlleBestellingenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="AlleBestellingenWindow" Height="450" Width="800">
    <Grid Margin="0,0,90,0">
        <DataGrid Margin="0,0,62,0" Name="BestellingenDataGrid" IsReadOnly="True" CanUserAddRows="False"/>
        <Button Margin="660,30,-80,346" Content="Alle Bestellingen" Click="Button_Click"/>
        <TextBox x:Name="txtId" Margin="660,131,-80,269" />
        <Button Margin="660,169,-80,207" Content="Specifieke bestelling op Id" Click="Button_Click_1"/>
        <Button Margin="660,238,-80,138" Content="Terug" Click="Button_Click_2"/>

    </Grid>
</Window>
